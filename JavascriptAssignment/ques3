let n = 5;
for (let i = 1; i <= n; i++) {
  let stars = '';
  for (let j = 1; j <= n - i; j++) {
    stars += ' ';
  }
  for (let k = 1; k <= (2 * i - 1); k++) {
    stars += '*';
  }  
  console.log(stars);
}

for (let i = n - 1; i >= 1; i--) {
  let stars = '';
  for (let j = 1; j <= n - i; j++) {
    stars += ' ';
  }
  for (let k = 1; k <= (2 * i - 1); k++) {
    stars += '*';
  }
  console.log(stars);
}
